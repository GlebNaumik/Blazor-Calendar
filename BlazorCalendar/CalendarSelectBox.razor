<calendar-select-box class="@(IsOpened.T("calendar-select-box__opened"))">
    <SelectBoxButton OnClick="SwitchToggled">
        @SelectedDate.ToString("dd MMM yyyy")
    </SelectBoxButton>
    @if (IsOpened) {
        <Popup IsOpened=IsOpened>                                          
            <CalendarView SelectedDate="@SelectedDate" SelectedDateChanged="OnSelectedDateChanged" />
        </Popup>
    }
</calendar-select-box>

@code {
    [Parameter] public DateTime SelectedDate { get; set; }
    [Parameter] public EventCallback<DateTime> SelectedDateChanged { get; set; }

    private bool IsOpened { get; set; }

    private void
    SwitchToggled() => IsOpened = !IsOpened;

    private void OnSelectedDateChanged(DateTime date) {
        SelectedDateChanged.InvokeAsync(date);
    }
}