<button class="toggle-button @Class @IsToggled.T("toggled")" @onclick="HandleClick">  
    @Header
</button>

@code {
    [Parameter] public bool IsToggled { get; set; }
    [Parameter] public EventCallback<bool> OnToggled { get; set; }
    [Parameter] public string Header { get; set; }

    void HandleClick() => OnToggled.InvokeAsync(IsToggled);
}
